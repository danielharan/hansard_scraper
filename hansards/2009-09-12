</H4><br xmlns:msxsl="urn:schemas-microsoft-com:xslt"><br xmlns:msxsl="urn:schemas-microsoft-com:xslt"><script language="javascript" type="text/javascript" xmlns:msxsl="urn:schemas-microsoft-com:xslt">
      // Global Table of Content div collection
      var toc_div_ids = new Array
      var i = 0

		  img_expand = new Image();                       
		  img_expand.src = "/common/images/nav_expand.gif";

		  img_collapse = new Image();                       
		  img_collapse.src = "/common/images/nav_collapse.gif";

      function ToggleDisplay(divId) {
        var ctl = document.getElementById( divId )

        if (ctl.style.display == 'none') {
          ExpandCollapse( divId, 'expand' )
        } else {
          ExpandCollapse( divId, 'collapse' )
        }
      }
      
      function ExpandCollapse(divId, newDisplay) {
          var ctl = document.getElementById( divId )
          
          if (newDisplay == 'collapse') {
            ctl.style.display = 'none';
          	if (document.images) {
                document['imgtoc_' + divId].src = img_expand.src;
            }              
          } else {
            ctl.style.display = 'inline';
          	if (document.images) {
                document['imgtoc_' + divId].src = img_collapse.src;
            }              
          }
      }

      // collapse the Table of Content
      function ExpandCollapseAll(newDisplay) {
        for (var ctr = 0; ctr < toc_div_ids.length; ctr++) {
          var curAnchor = document.getElementById('a_' + toc_div_ids[ctr])
          if (curAnchor != 'undefined') {
            ExpandCollapse( toc_div_ids[ctr], newDisplay )
          }
        }
      }

      function JumpToTOC(itemId) {
        ExpandCollapseAll('expand')
        location = '#toc' + itemId
      }
      
    </script><a href="#EndOfToc" xmlns:msxsl="urn:schemas-microsoft-com:xslt"><img border="0" width="1" height="1" src="/common/images/skip_nav.gif" alt="Skip the Table of Contents"></a>&nbsp;<hr width="50%" align="left" xmlns:msxsl="urn:schemas-microsoft-com:xslt">
